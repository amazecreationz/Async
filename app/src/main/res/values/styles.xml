<resources>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RaisedButton" parent="Theme.AppCompat.Light">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:height">50dp</item>
        <item name="colorControlHighlight">@color/grey_100</item>
        <item name="colorButtonNormal">@color/grey_50</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="RaisedPrimaryButton" parent="RaisedButton">
        <item name="colorControlHighlight">@color/cyan_900</item>
        <item name="colorButtonNormal">@color/cyan_800</item>
        <item name="android:textColor">@color/cyan_100</item>
    </style>

    <style name="RaisedWarningButton" parent="RaisedButton">
        <item name="colorControlHighlight">@color/orange_900</item>
        <item name="colorButtonNormal">@color/orange_800</item>
        <item name="android:textColor">@color/orange_100</item>
    </style>
</resources>
