<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/normalText</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grey_300</item>
    </style>

    <style name="CardTheme" parent="CardView.Light">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">1dp</item>
        <item name="contentPadding">16dp</item>
        <item name="android:minHeight">200dp</item>
    </style>

    <style name="CardHeader">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="RaisedButton" parent="Theme.AppCompat.Light">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:height">50dp</item>
        <item name="colorControlHighlight">@color/grey_100</item>
        <item name="colorButtonNormal">@color/grey_50</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="RaisedPrimaryButton" parent="RaisedButton">
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAccentLight</item>
    </style>

    <style name="RaisedWarningButton" parent="RaisedButton">
        <item name="colorControlHighlight">@color/orange_900</item>
        <item name="colorButtonNormal">@color/orange_800</item>
        <item name="android:textColor">@color/orange_100</item>
    </style>
</resources>
